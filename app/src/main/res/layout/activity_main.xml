<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rayonpinnock.christinesdelights.MainActivity">

    <ImageView
        android:id="@+id/logo_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/company_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="bold"
        android:background="#02a4cc"
        android:text="@string/business_name"
        android:textColor="@android:color/black"
        android:fontFamily="cursive"
        android:textSize="42sp"/>

    <TextView
        android:id="@+id/company_tag_line_text_view"
        android:layout_below="@id/company_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#02a4cc"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/business_tag_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#4cafc7">

        <TextView
            android:id="@+id/company_contact_info_text_view_left"
            style="@style/ContactInfoStyle"
            android:layout_gravity="center_vertical"
            android:paddingRight="3dp"
            android:autoLink="phone"
            android:text="@string/business_address_phone" />

        <TextView
            android:id="@+id/company_contact_info_text_view_right"
            style="@style/ContactInfoStyle"
            android:gravity="right"
            android:paddingLeft="3dp"
            android:autoLink="web"
            android:text="@string/business_web_info" />

    </LinearLayout>

</RelativeLayout>
